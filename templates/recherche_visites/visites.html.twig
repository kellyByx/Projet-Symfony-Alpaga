{% extends 'base.html.twig' %}
{% block body %}

</div>
    <!-- Blog Start -->
    <div class="container pt-5">
        <div class="d-flex flex-column text-center mb-5 pt-5">
            <h1 class="display-4 m-0"><span class="text-primary">Updates</span> From Blog</h1>
