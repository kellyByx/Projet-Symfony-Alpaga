{% extends 'base.html.twig' %} {% block body %}

<!-- Booking Start -->
<div class="container-fluid">
  <div class="container">
    <br /><br />
    <div class="row align-items-center">
      <div class="col-lg-5">
        <div class="bg-primary py-5 px-4 px-sm-5 rounded">
          <div class="bg-white text-dark border p-5 rounded">
            <h4>Inscription :</h4>
            {{ form_start(form) }}
            {{ form_row(form.username, {'label': 'Nom d\'utilisateur','attr': {'placeholder': 'Votre nom'

            }}) }}
            {{ form_row(form.email, {'label': 'Adresse email','attr': {'placeholder': 'Votre Email'

            }}) }}
            {{ form_row(form.telephone, {'label': 'Numéro de téléphone','attr': {'placeholder': 'Votre numéro de téléphone'

            }}) }}
            {{ form_row(form.password, {'label': 'Mot de passe','attr': {'placeholder': 'Entré un mot de passe'

            }}) }}
            {{ form_row(form.confirmerPassword, {'label': 'confirmer le mot de passe','attr': {'placeholder': 'Re rentré le mot de passe'

            }}) }}
            <div>
              <button
                class="btn btn-dark btn-block border-0 py-3"
                type="submit"
              >
                S'inscrire
              </button>
            </div>
            {{ form_end(form) }}
          </div>
        </div>
      </div>
      <div class="col-lg-7 py-5 py-lg-0 px-3 px-lg-5">
        <h4 class="text-secondary mb-3">Pourquoi s'inscrire?</h4>
        <h1 class="display-4 mb-4">
          Avantages <span class="text-primary">Membre</span>
        </h1>
        <p>
          Voici quelque une de vos possibilitées en temps que membre inscrit au
          site:
        </p>
        <div class="row py-2">
          <div class="col-sm-6">
            <div class="d-flex flex-column">
              <div class="d-flex align-items-center mb-2">
                <h1
                  class="
                    flaticon-house
                    font-weight-normal
                    text-secondary
                    m-0
                    mr-3
                  "
                ></h1>
                <h5 class="text-truncate m-0">Visites</h5>
              </div>
              <p>Créer une annonces pour porposé des visites</p>
            </div>
          </div>
          <div class="col-sm-6">
            <div class="d-flex flex-column">
              <div class="d-flex align-items-center mb-2">
                <h1
                  class="
                    flaticon-food
                    font-weight-normal
                    text-secondary
                    m-0
                    mr-3
                  "
                ></h1>
                <h5 class="text-truncate m-0">Alimentations</h5>
              </div>
              <p>
                Ecrire un article sur un retour alimentaire constaté chez vos
                animaux
              </p>
            </div>
          </div>
          <div class="col-sm-6">
            <div class="d-flex flex-column">
              <div class="d-flex align-items-center mb-2">
                <h1
                  class="
                    flaticon-grooming
                    font-weight-normal
                    text-secondary
                    m-0
                    mr-3
                  "
                ></h1>
                <h5 class="text-truncate m-0">Soins</h5>
              </div>
              <p class="m-0">
                Créer un article pour partagé les coordonées d'un vétérinaires
                pour Alpagas
              </p>
            </div>
          </div>
          <div class="col-sm-6">
            <div class="d-flex flex-column">
              <div class="d-flex align-items-center mb-2">
                <h1
                  class="
                    flaticon-toy
                    font-weight-normal
                    text-secondary
                    m-0
                    mr-3
                  "
                ></h1>
                <h5 class="text-truncate m-0">Aménagements</h5>
              </div>
              <p class="m-0">
                Créer une article pour partagé vos astuces aménagements pour vos
                animaux
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Booking Start -->

{% endblock %}
